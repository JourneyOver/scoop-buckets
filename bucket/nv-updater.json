{
    "version": "0.6.7.0",
    "description": "NVUpdater. The NV Updater program is used to update the driver for GeForce graphics cards from Nvidia. No NVIDIA account is required and the additional tool GeForce Experience is not installed.",
    "homepage": "https://www.sys-worx.net/nv-updater-eng/",
    "license": "Freeware",
    "notes": "To run at startup, right-click on the tray icon, click Options, and select 'Autorun NV Updater at Windows startup'.",
    "url": "https://www.sys-worx.net/attachment/124-nv-updater-nosetup-0.6.7.0-zip/#/dl.7z",
    "hash": "31f69e3c77bd5efd51cb96cb6ee7f9ab1d194ac359efa3a43a0b2162f1993801",
    "bin": "nv_updater.exe",
    "shortcuts": [
        [
            "nv_updater.exe",
            "NV Updater"
        ]
    ],
    "checkver": {
        "regex": "(?<version>[\\w.]+)-(?<build>[\\w.]+)",
        "replace": "${version}",
        "script": [
            "try {",
            "    $url = 'https://www.sys-worx.net/filebase/file/11-nv-updater-nvidia-driver-updater/#versions'",
            "    $response = Invoke-WebRequest -Uri $url",
            "    $content = $response.Content",
            "    $nvupdaterVersion = [regex]::Match($content, 'softwareVersion\">(?<version>[\\d.]+)').Groups['version'].Value",
            "    $updateURL = [regex]::Match($content, '(?<build>[\\d.]+)-nv-updater-nosetup-(\\d.+)-zip').Groups['build'].Value",
            "    Write-Output \"$nvupdaterVersion-$updateURL\"",
            "} catch {",
            "    throw $_.Exception.Message",
            "}"
        ]
    },
    "autoupdate": {
        "url": "https://www.sys-worx.net/attachment/$matchBuild-nv-updater-nosetup-$version-zip/#/dl.7z"
    }
}
